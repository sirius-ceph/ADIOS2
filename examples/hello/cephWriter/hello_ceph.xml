<?xml version="1.0"?>
<!-- Config XML file fo the  
        hello_skeleton*
     executables in build/bin -->

<adios-config>

    <!--====================================
           Configuration for the Writer 
        ====================================-->

    <io name="writer">

    
        <engine type="Ceph">
            <parameter key="verbose" value="5"/>
            <parameter key="MaxBufferSize" value="1Gb"/>
            <parameter key="BufferGrowthFactor" value="1.25"/>
            <parameter key="CephTargetObjSize" value="8388608"/>
        </engine>
        
        <transport type="CephObjTrans">
            <parameter key="CephMonIP" value="127.0.0.1"/>
            <parameter key="CephUserName" value="client.admin"/>
            <parameter key="CephClusterName" value="ceph"/>
            <parameter key="CephStorageTier" value="SLOW"/>
            <parameter key="CephConfFilePath" value="/share/ceph.conf"/>
            <parameter key="verbose" value="5"/>
        </transport>
            
    </io>


    <!--====================================
           Configuration for the Reader - NOT YET IMPLEMENTED
        ====================================-->

    <io name="reader">
    
        <engine type="BPFile">
            <parameter key="verbose" value="5"/>
        </engine>
        
        <transport type="File">
            <!-- POSIX, stdio (C FILE*), fstream (C++) -->
            <parameter key="Library" value="POSIX"/>
        </transport>
        
    </io>
</adios-config>
